<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectofinalprogramacionhotel.controller.MenuClientesController" prefHeight="600.0" prefWidth="800.0">
    <!-- Título principal -->
    <top>
        <Label text="Gestión de Clientes" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10;" BorderPane.alignment="CENTER" />
    </top>

    <!-- Panel izquierdo: Lista de clientes -->
    <left>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Label text="Lista de Clientes" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ListView fx:id="clientesLst" prefHeight="500.0" prefWidth="250.0" onMouseClicked="#mostrarClienteSeleccionado" />
        </VBox>
    </left>

    <!-- Panel central: Información del cliente -->
    <center>
        <TabPane style="-fx-padding: 10;">
            <!-- Pestaña de información general -->
            <Tab text="Información del Cliente">
                <GridPane hgap="10" vgap="10" style="-fx-padding: 20;">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" />
                        <ColumnConstraints halignment="LEFT" />
                    </columnConstraints>
                    <children>
                        <Label text="Id Cliente:" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Label fx:id="idCliente" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="Nombre:" style="-fx-font-weight: bold;" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Label fx:id="nombreCliente" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="Gmail:" style="-fx-font-weight: bold;" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Label fx:id="gmailCliente" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="Teléfono:" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <Label fx:id="telefonoCliente" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="Contraseña:" style="-fx-font-weight: bold;" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                        <Label fx:id="contrasenaCliente" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                        <Label text="DNI:" style="-fx-font-weight: bold;" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                        <Label fx:id="dniCliente" GridPane.rowIndex="5" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
            </Tab>

            <!-- Pestaña de reservas -->
            <Tab text="Reservas del Cliente">
                <VBox spacing="10" style="-fx-padding: 20;">
                    <Label text="Reservas Asociadas" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
                    <TableView fx:id="reservasClienteTbl" prefHeight="300.0">
                        <columns>
                            <TableColumn text="ID Reserva" />
                            <TableColumn text="Fecha Entrada" />
                            <TableColumn text="Fecha Salida" />
                            <TableColumn text="Estado" />
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <!-- Panel inferior: Botones de acción -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
            <Button text="Añadir Cliente" onAction="#añadirCliente" style="-fx-font-size: 14px;" />
            <Button text="Actualizar Cliente" onAction="#actualizarCliente" style="-fx-font-size: 14px;" />
            <Button text="Eliminar Cliente" onAction="#eliminarCliente" style="-fx-font-size: 14px;" />
        </HBox>
    </bottom>
</BorderPane>