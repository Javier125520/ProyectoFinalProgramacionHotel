<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectofinalprogramacionhotel.controller.AñadirReservaServicioController">
    <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
        <Label text="Reservar Servicio" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <GridPane hgap="10" vgap="10">
            <Label text="Fecha Inicio:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <DatePicker fx:id="fechaInicioPicker" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Fecha Fin:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <DatePicker fx:id="fechaFinPicker" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Número de Personas:" GridPane.rowIndex="2" GridPane.columnIndex="0" />

            <TextField fx:id="numPersonasTxt" GridPane.rowIndex="2" GridPane.columnIndex="1" />
            <Label text="Precio:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <TextField fx:id="precioTxt" GridPane.rowIndex="3" GridPane.columnIndex="1" />
        </GridPane>
        <HBox spacing="10">
            <Button text="Reservar" onAction="#guardarReservaServicio" />
            <Button text="Cancelar" onAction="#cancelar" />
        </HBox>
    </VBox>
</AnchorPane>
