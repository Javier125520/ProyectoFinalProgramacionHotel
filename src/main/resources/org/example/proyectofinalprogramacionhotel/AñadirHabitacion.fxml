<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectofinalprogramacionhotel.controller.AñadirHabitacionController">
    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20" style="-fx-padding: 20; -fx-background-color: #f4f4f4;">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Añadir Habitación" />
        <GridPane alignment="CENTER" hgap="15" style="-fx-padding: 10;" vgap="15">
            <Label style="-fx-font-size: 14px; -fx-alignment: CENTER;" text="Número de Habitación:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="numeroHabitacionTxt" style="-fx-alignment: CENTER;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label style="-fx-font-size: 14px; -fx-alignment: CENTER;" text="Tipo de Habitación:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="tipoHabitacionCombo" prefWidth="77.0" style="-fx-alignment: CENTER;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label style="-fx-font-size: 14px; -fx-alignment: CENTER;" text="Precio por Noche:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="precioNocheTxt" style="-fx-alignment: CENTER;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label style="-fx-font-size: 14px; -fx-alignment: CENTER;" text="Estado:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="estadoHabitacionCombo" prefHeight="26.0" prefWidth="77.0" style="-fx-alignment: CENTER;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <HBox alignment="CENTER" spacing="15">
            <Button onAction="#guardarHabitacion" style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" text="Guardar" />
            <Button onAction="#cancelar" style="-fx-font-size: 14px; -fx-background-color: #f44336; -fx-text-fill: white;" text="Cancelar" />
        </HBox>
    </VBox>
</AnchorPane>
