<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.proyectofinalprogramacionhotel.controller.InicioController">
    <children>
        <VBox alignment="CENTER" spacing="30.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <Label text="Bienvenido a la página de gestión de su hotel">
                <font>
                    <Font name="Verdana" size="25.0" />
                </font>
                <textFill>
                    <Color fx:constant="DARKBLUE" />
                </textFill>
            </Label>
            <Label text="¿Qué desea gestionar?">
                <font>
                    <Font name="Verdana" size="24.0" />
                </font>
                <textFill>
                    <Color fx:constant="BLACK" />
                </textFill>
            </Label>
            <Button onAction="#irAPantallaGestionCliente" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 18px;" text="Cliente" />
            <Button onAction="#irAPantallaGestionGerente" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 18px;" text="Gerente" />
            <Button onAction="#salirDelPrograma" prefHeight="60.0" prefWidth="250.0" style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-font-family: 'Verdana'; -fx-font-size: 18px;" text="Salir" />
        </VBox>
    </children>
</AnchorPane>
